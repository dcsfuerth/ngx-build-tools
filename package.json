{
  "name": "@dcs/ngx-build-tools",
  "version": "1.1.0",
  "description": "Tools and helpers to support dev and production build of angular apps",
  "main": "build/index.js",
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "lint": "tslint --project tsconfig.json --type-check",
    "build": "run-s lint compile",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "precommit": "npm run lint",
    "prepush": "npm run build"
  },
  "bin": {
    "ngx-build-watch": "./build/scripts/watch.js",
    "ngx-inline-styles": "./build/scripts/inline-ng-styles.js",
    "ngx-build-package-json": "./build/scripts/build-package-json.js"
  },
  "keywords": [
    "angular",
    "rollup",
    "typescript"
  ],
  "author": "Marc Remolt <marc.remolt@dcs-fuerth.de>",
  "license": "ISC",
  "repository": "dcsfuerth/ngx-build-tools",
  "devDependencies": {
    "@types/chokidar": "^1.7.0",
    "@types/glob": "^5.0.30",
    "@types/node": "^7.0.31",
    "@types/node-sass": "^3.10.32",
    "@types/rollup": "^0.41.0",
    "@types/yargs": "^6.6.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.4",
    "npm-run-all": "^4.0.2",
    "ts-node": "^3.0.6",
    "tslib": "^1.7.1",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@angular/compiler-cli": "^4.2.2",
    "@angular/core": "^4.2.2",
    "angular2-inline-template-style": "^1.1.0",
    "chokidar": "^1.7.0",
    "glob": "^7.1.2",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.2",
    "pretty-error": "^2.1.0",
    "rollup": "^0.43.0",
    "yargs": "^8.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
